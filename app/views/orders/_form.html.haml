= form_for @order do |f|
  -if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :client
    = f.text_field :client
  .field
    = f.label :toppings
    = f.text_field :toppings
  .field
    = f.label :amount
    = f.number_field :amount
  .actions
    = f.submit 'Save'
