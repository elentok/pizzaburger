.page-header
  %h1
    Listing clients
    %small those who pay money


%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Phone
      %th Address
      %th

  %tbody
    - @clients.each do |client|
      %tr
        %td= client.name
        %td= client.phone
        %td= client.address
        %td
          = link_to 'Show', client, class: 'btn btn-mini'
          = link_to 'Edit', edit_client_path(client), class: 'btn btn-mini'
          = link_to 'Destroy', client, :confirm => 'Are you sure?', :method => :delete, 
            class: 'btn btn-mini btn-danger'

%br

= link_to 'New Client', new_client_path, class: 'btn btn-success'
